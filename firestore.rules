rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isUserInGroup(groupId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId;
    }

    function isMemberOfGroup(groupId) {
      return request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
    }

    match /users/{userId} {
      // Un utilisateur peut lire et écrire son propre document.
      allow read, write: if request.auth.uid == userId;
      
      // Un utilisateur peut lire les informations des autres membres de son groupe.
      allow get: if isUserInGroup(resource.data.groupId);
    }

    match /groups/{groupId} {
      // Les membres du groupe peuvent lire les données du groupe.
      allow get: if isMemberOfGroup(groupId);
      
      // Un utilisateur peut créer un groupe s'il s'ajoute comme premier membre.
      allow create: if request.auth.uid in request.resource.data.members && request.resource.data.members.size() == 1;

      // Les membres du groupe peuvent mettre à jour les données du groupe (ajouter/modifier un planning, ajouter un membre, etc.).
      allow update: if isMemberOfGroup(groupId);
    }
  }
}
